fun main(args: Array<String>) {
    val а: Int = 2
    val b: Int = 3
    val c: Int = 4
    val V = а * b * c

    println("Формула объёма параллелепипеда равна: $а * $b * $c и составляет  $V")
    println("Где:")
    println("$а; $b; $c - это рёбра параллелепипеда")
    println("$V - объем параллелепипеда")
    }
